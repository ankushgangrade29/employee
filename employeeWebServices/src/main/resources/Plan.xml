<?xml version='1.0' encoding='UTF-8'?>
<deployment-plan xmlns="http://xmlns.oracle.com/weblogic/deployment-plan" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.oracle.com/weblogic/deployment-plan http://xmlns.oracle.com/weblogic/deployment-plan/1.0/deployment-plan.xsd" global-variables="false">
	<application-name>ympChargebacks</application-name>
	<variable-definition>
    
		<variable>
			<name>log4jConfigLocation</name>
			<value>D:/chargebacks/ympconf/services/log4j.xml</value>
		</variable>
		
		<variable>
			<name>propertyConfigLocation</name>
			<value>D:/chargebacks</value>
		</variable>
		
		<variable>
			<name>AuthMethod</name>
			<value>BASIC</value>
		</variable>
		
	</variable-definition>
		
	<module-override>
		<module-name>ympChargebacks.war</module-name>
		<module-type>war</module-type>
		
		<module-descriptor external="true">
			<root-element>web-app</root-element>
			<uri>WEB-INF/web.xml</uri>
			<variable-assignment>
				<name>log4jConfigLocation</name>
				<xpath>/web-app/context-param/[param-name="log4jConfigLocation"]/param-value</xpath>
				<operation>replace</operation>
			</variable-assignment>
			
			<variable-assignment>
				<name>propertyConfigLocation</name>
				<xpath>/web-app/context-param/[param-name="propertyConfigLocation"]/param-value</xpath>
				<operation>replace</operation>
			</variable-assignment>
			
			<variable-assignment>
				<name>AuthMethod</name>
				<xpath>/web-app/login-config/auth-method</xpath>
				<operation>replace</operation>
			</variable-assignment>
					
	</module-descriptor>
		
		<module-descriptor external="false">
			<root-element>weblogic-web-app</root-element>
			<uri>WEB-INF/weblogic.xml</uri>
			<hash-code>1441889662099</hash-code>
		</module-descriptor>
		
		<module-descriptor external="true">
			<root-element>wldf-resource</root-element>
			<uri>META-INF/weblogic-diagnostics.xml</uri>
		</module-descriptor>
	</module-override>
	
	<config-root></config-root>
	
</deployment-plan>
